    "@types/react": "^19.1.12",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "storybook": "^9.1.5",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2"
  },
