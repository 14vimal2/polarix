{
  "name": "@polarix/ui",
  "version": "1.0.38",
  "description": "UI component library for internal projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./form-builder": {
      "import": "./dist/form-builder/index.js",
      "types": "./dist/form-builder/index.d.ts"
    },
    "./table-builder": {
      "import": "./dist/table-builder/index.js",
      "types": "./dist/table-builder/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/ui/index.js",
      "types": "./dist/components/ui/index.d.ts"
    },
    "./styles.css": {
      "import": "./dist/styles.css"
    }
  },
  "scripts": {
    "build": "bun run build:css && tsc",
    "clean": "rm -rf dist",
    "build:css": "tailwindcss -i ./src/styles/global.css -o ./dist/styles.css --minify",
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "ui",
    "components",
    "typescript",
    "internal"
  ],
  "author": "Polarix Team",
  "license": "MIT",
