    "@radix-ui/react-popover": "^1.0.0",
    "@radix-ui/react-radio-group": "^1.0.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.0.4",
    "autoprefixer": "^10.4.20",
