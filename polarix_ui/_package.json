{
  "name": "@polarix/ui",
  "version": "1.0.13",
  "description": "UI component library for internal projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./form-builder": {
      "import": "./dist/form-builder/index.js",
      "types": "./dist/form-builder/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/ui/index.js",
      "types": "./dist/components/ui/index.d.ts"
    },
    "./styles.css": {
      "import": "./dist/styles.css"
    }
  },
  "scripts": {
    "build": "npm run build:types",
    "build:types": "tsc",
    "clean": "rm -rf dist",
    "prepare": "npm run clean && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ui",
    "components",
    "typescript",
    "internal"
  ],
  "author": "Polarix Team",
  "license": "MIT",
  "peerDependencies": {
    "@radix-ui/react-checkbox": "^1.0.0",
